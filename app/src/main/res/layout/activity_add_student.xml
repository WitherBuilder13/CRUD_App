<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStudent">

    <TextView
        android:id="@+id/AS_tv_v_addStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Add Student"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AS_tv_v_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="First Name"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/AS_et_v_firstName"
        app:layout_constraintStart_toStartOf="@+id/AS_et_v_firstName"
        app:layout_constraintTop_toBottomOf="@+id/AS_tv_v_addStudent" />

    <TextView
        android:id="@+id/AS_tv_v_lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/AS_et_v_lastName"
        app:layout_constraintStart_toStartOf="@+id/AS_et_v_lastName"
        app:layout_constraintTop_toTopOf="@+id/AS_tv_v_firstName" />

    <TextView
        android:id="@+id/AS_tv_v_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Username"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/AS_et_v_username"
        app:layout_constraintStart_toStartOf="@+id/AS_et_v_username"
        app:layout_constraintTop_toBottomOf="@+id/AS_et_v_firstName" />

    <TextView
        android:id="@+id/AS_tv_v_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/AS_et_v_email"
        app:layout_constraintStart_toStartOf="@+id/AS_et_v_email"
        app:layout_constraintTop_toTopOf="@+id/AS_tv_v_username" />

    <TextView
        android:id="@+id/AS_tv_v_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Age"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/AS_et_v_age"
        app:layout_constraintStart_toStartOf="@+id/AS_et_v_age"
        app:layout_constraintTop_toBottomOf="@+id/AS_et_v_username" />

    <TextView
        android:id="@+id/AS_tv_v_gpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/AS_et_v_gpa"
        app:layout_constraintStart_toStartOf="@+id/AS_et_v_gpa"
        app:layout_constraintTop_toTopOf="@+id/AS_tv_v_age" />

    <TextView
        android:id="@+id/AS_tv_v_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Major"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/AS_sp_v_major"
        app:layout_constraintStart_toStartOf="@+id/AS_sp_v_major"
        app:layout_constraintTop_toBottomOf="@+id/AS_et_v_age" />

    <EditText
        android:id="@+id/AS_et_v_firstName"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/AS_et_v_lastName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AS_tv_v_firstName" />

    <EditText
        android:id="@+id/AS_et_v_lastName"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/AS_et_v_firstName"
        app:layout_constraintTop_toBottomOf="@+id/AS_tv_v_lastName" />

    <EditText
        android:id="@+id/AS_et_v_username"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/AS_et_v_firstName"
        app:layout_constraintTop_toBottomOf="@+id/AS_tv_v_username" />

    <EditText
        android:id="@+id/AS_et_v_email"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/AS_et_v_lastName"
        app:layout_constraintTop_toBottomOf="@+id/AS_tv_v_email" />

    <EditText
        android:id="@+id/AS_et_v_age"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/AS_et_v_username"
        app:layout_constraintTop_toBottomOf="@+id/AS_tv_v_age" />

    <EditText
        android:id="@+id/AS_et_v_gpa"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/AS_et_v_email"
        app:layout_constraintTop_toBottomOf="@+id/AS_tv_v_gpa" />

    <Button
        android:id="@+id/AS_btn_v_back"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:text="Back"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/AS_btn_v_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AS_sp_v_major" />

    <Button
        android:id="@+id/AS_btn_v_addMajor"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Add Major"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/AS_sp_v_major"
        app:layout_constraintTop_toBottomOf="@+id/AS_tv_v_major" />

    <Button
        android:id="@+id/AS_btn_v_add"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:text="Add"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/AS_btn_v_back"
        app:layout_constraintTop_toTopOf="@+id/AS_btn_v_back" />

    <TextView
        android:id="@+id/AS_tv_v_error_emptyFields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Please fill in all fields"
        android:textColor="#D60000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AS_btn_v_back"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/AS_tv_v_error_usernameExists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username already exists"
        android:textColor="#D60000"
        app:layout_constraintEnd_toEndOf="@+id/AS_et_v_username"
        app:layout_constraintStart_toStartOf="@+id/AS_et_v_username"
        app:layout_constraintTop_toBottomOf="@+id/AS_et_v_username"
        tools:visibility="invisible" />

    <Spinner
        android:id="@+id/AS_sp_v_major"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@+id/AS_btn_v_addMajor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AS_tv_v_major" />
</androidx.constraintlayout.widget.ConstraintLayout>